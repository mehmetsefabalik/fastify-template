{
  "name": "fastify-template",
  "version": "1.0.0",
  "description": "minimal fastify template",
  "author": "mehmetsefabalik@gmail.com",
  "keywords": [
    "fastify",
    "starter",
    "boilerplate",
    "typescript",
    "jest",
    "eslint"
  ],
  "repository": "https://github.com/mehmetsefabalik/fastify-template",
  "license": "UNLICENSED",
  "scripts": {
    "build:dev": "tsc --watch",
    "build": "tsc",
    "start:dev": "NODE_ENV=development nodemon ./dist/index",
    "start": "NODE_ENV=production node ./dist/index",
    "test": "npx jest",
    "cov": "npx jest --collect-coverage",
    "lint": "eslint --fix ./src/*.ts ./src/**/*.ts"
  },
  "dependencies": {
    "fastify": "^3.3.0",
    "fastify-env": "^2.0.1"
  },
  "devDependencies": {
    "@types/node": "^14.6.1",
    "@types/faker": "^4.1.10",
    "@types/jest": "^26.0",
    "@types/sinon": "^9.0",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "^3.10",
    "@typescript-eslint/parser": "^3.10",
    "eslint": "^7.7",
    "eslint-config-prettier": "^6.10.1",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "faker": "^5.1",
    "husky": "^4.2.3",
    "jest": "^26.4",
    "nock": "^13.0",
    "prettier": "^2.0.2",
    "sinon": "^9.0.0",
    "supertest": "^4.0.2",
    "ts-jest": "^26.3",
    "typescript": "^4.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm run test"
    }
  }
